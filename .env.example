# Application
NODE_ENV=development
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:3001

# Database
MONGO_URI=mongodb://admin:password@localhost:27017/private-messaging?authSource=admin
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# WebRTC
TURN_SERVER_URL=turn:localhost:3478
TURN_SERVER_USERNAME=testuser
TURN_SERVER_CREDENTIAL=testpass

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
DEBUG=private-messaging:*
LOG_LEVEL=debug

# Third-party services (optional)
SNYK_TOKEN=your-snyk-token
CYPRESS_RECORD_KEY=your-cypress-record-key
